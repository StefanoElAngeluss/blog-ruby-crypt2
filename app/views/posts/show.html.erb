<div style="width: 100%; height: 300px; overflow-y: hidden;">
  <% if @post.image_url.present? %>
    <img class="card-img-top"
      src="<%= @post.image_url(:post_show) %>"
      alt="Blog image Card">
  <% end %>
</div>
<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="jumbotron">
      <h1 class="display-4 text-center">
        <%= @post.title %>
      </h1>
      <p class="lead">
        <%= l(@post.created_at.to_date,format: :long) %> par <%= @post.user.username %> | <%= pluralize(@post.views, "Vues") %>
      </p>
      <p>
        <br class="my-4">
        <strong>Contenu:</strong>
          <%= @post.content %>
      </p>
      <span class="d-flex justify-content-around">
        <% if current_user.admin? %>
          <%= link_to 'Editer', edit_post_path(@post), class: 'btn btn-sm btn-warning' %> | <%= link_to 'retour', posts_path, class: 'btn btn-sm btn-danger' %>
        <% else %>
          <%= link_to 'retour', root_path, class: 'btn btn-sm btn-danger' %>
        <% end %>
      </span>
    </div>
  </div>
</div>


