<div class="container mt-4 mb-4">
  <div class="card" style="width: 500px;margin:auto;">
    <div class="card-header">
      <h2 align="center">Connexion</h2>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :"votre_nom_d\'utilisateur" %><br />
          <%= f.text_field :login, autofocus: true, autocomplete: "login", class:"form-control" %>
        </div>

        <div class="field">
          <%= f.label :votre_mot_de_passe %><br />
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :se_souvenir_de_moi_? %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Se connecter", class: 'btn btn-sm btn-outline-success', style:'font-size:18px;' %>
        </div>
       
      <% end %>
    </div>
    <div class="card-footer">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
