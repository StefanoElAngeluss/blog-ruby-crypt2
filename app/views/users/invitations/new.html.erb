<div class="card mt-5" style="position:relative;margin:auto;width: 90%;">
  <div class="card-header">
    <h2><%#= t "devise.invitations.new.header" %> Inviter un utilisateur</h2>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <% resource.class.invite_key_fields.each do |field| -%>
        <div class="field">
          <%#= f.label field %>
          <%= f.label "Adresse Email" %><br />
          <%= f.text_field field, class: "form-control", style: "width:40%;" %>
        </div>
      <% end -%>
    <br>
      <div class="actions">
        <%= f.submit "Envoyer l'invitation", class: "btn btn-outline-primary" %>
        <%#= f.submit t("devise.invitations.new.submit_button"), class: "btn btn-outline-primary" %>
      </div>
    <% end %>
  </div>
</div>



