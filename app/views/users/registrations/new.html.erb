<div class="container mt-4 mb-4">
  <div class="card" style="width: 500px;margin:auto;">
    <div class="card">
      <div class="card-header">
        <h2 align="center">Inscription</h2>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>
          <%= invisible_captcha %>

          <div class="field">
            <%= f.label :"nom_d\'utilisateur" %><br />
            <p>
              <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
            </p>
          </div>

          <div class="field">
            <%= f.label :adresse_email %><br />
            <p>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </p>
          </div>

          <div class="field">
            <%= f.label :choisir_un_mot_de_passe %>
            <% if @minimum_password_length %>
            <em style="color:red;">(minimum <%= @minimum_password_length %> caract√®res)</em>
            <% end %><br />
            <p>
              <%= f.password_field :password, autocomplete: "new-password" %>
            </p>
          </div>

          <div class="field">
            <%= f.label :confirmez_votre_mot_de_passe %><br />
            <p>
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </p>
          </div>

          <div class="actions">
            <%= f.submit "S'inscrire", class: 'btn btn-sm btn-outline-primary', style:'font-size:18px;' %>
          </div>
        <% end %>
      </div>
      <div class="card-footer">
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>