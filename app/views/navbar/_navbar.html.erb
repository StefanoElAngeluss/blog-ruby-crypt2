<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="/">
    <i class="fas fa-user-lock"></i>
    SuperBlog
  </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <%= link_to root_path, class: "nav-link #{'active font-weight-bold' if current_page?(root_path)}" do %>
        <div class="fa fa-home"></div>
        Accueil
      <% end %>
    </ul>
    <ul class="navbar-nav mr-right">
      <% if current_user %>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fa fa-user"></i>
            <b><%= current_user.username %></b>
          </a>
          <div class="dropdown-menu" style="margin-left: -110px!important;margin-top: 7px!important;" aria-labelledby="navbarDropdown">
            <%= link_to users_path, class: "dropdown-item #{'active font-weight-bold' if current_page?(users_path)}" do %>
              <i class="fa fa-users"></i>
                <span class="ml-2">Utilisateurs</span>
            <% end %>
            <%= link_to new_user_invitation_path(current_user), class: "dropdown-item #{'active font-weight-bold' if current_page?(new_user_invitation_path(current_user))}" do %>
              <i class="fas fa-paper-plane"></i>
                <span class="ml-2">Invitation</span>
            <% end %>
            <%= link_to user_path(current_user), class: "dropdown-item #{'active font-weight-bold' if current_page?(user_path(current_user))}" do %>
              <i class="fa fa-user"></i>
                <span class="ml-2">Mon Profil</span>
            <% end %>
            <%= link_to edit_user_registration_path, class: "dropdown-item #{'active font-weight-bold' if current_page?(edit_user_registration_path)}" do %>
              <i class="fa fa-cog"></i>
                <span class="ml-2">Paramètre du Compte</span>
            <% end %>
            <%= link_to destroy_user_session_path, method: :delete, class: "dropdown-item" do %>
              <i class="fa fa-sign-out-alt"></i>
                <span class="ml-2">Déconnexion</span>
            <% end %>
          </div>
        </li>
      <% else %>
        <%= link_to "Connexion", new_user_session_path, class: "nav-link #{'active font-weight-bold' if current_page?(new_user_session_path)}" %>
        <%= link_to "Inscription", new_user_registration_path, class: "nav-link #{'active font-weight-bold' if current_page?(new_user_registration_path)}" %>
      <% end %>
    </ul>
  </div>
</nav>
<%= render 'alert_messages/messages' %>